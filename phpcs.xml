<?xml version="1.0"?>
<ruleset name="Wordpress">
  <description>Wordpress Standards</description>
  <!-- Ignore Camel Case -->
  <rule ref="Squiz">
    <exclude name="Squiz.Classes.ValidClassName.NotCamelCaps"/>
  </rule>
  <!-- Allow PHP closing tags -->
  <rule ref="PSR2">
    <exlucde name=".Files.ClosingTag.NotAllowed"/>
  </rule>
</ruleset>
